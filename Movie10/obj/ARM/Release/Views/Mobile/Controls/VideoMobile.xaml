                                    <TextBlock Text="{Binding title}" Foreground="White" FontSize="25" TextWrapping="NoWrap"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
