            <PivotItem Header="COMMENT">
                <Grid x:ConnectionId='2' x:Name="cmtGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <ListView x:ConnectionId='3' x:Name="listcommentList" Grid.Row="0" Style="{StaticResource ListViewStyle2}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="3" Background="#141414" Width="350">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Height="35" Width="35" Stretch="UniformToFill" Source="/Assets/Menu/Guest-50.png" Grid.Column="0"/>
                                        <TextBlock x:Name="username" Margin="5,0,0,0" Grid.Column="1" Text="{Binding user}" Foreground="Green" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Grid>
                                    <TextBlock Margin="15" x:Name="contentText" Grid.Row="1" Text="{Binding comment}" Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Left" FontFamily="Segoe WP Light"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <TextBox x:ConnectionId='4' x:Name="userTbx"                       Grid.Row="1" PlaceholderText="enter your name..."/>
                    <TextBox x:ConnectionId='5' x:Name="emailTbx"                        Grid.Row="2" PlaceholderText="enter your email..."/>
                    <Grid x:ConnectionId='6' Grid.Row="3" x:Name="cmtsGrid">
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:ConnectionId='7' x:Name="commentTbx" Grid.Column="0" Height="40"                          PlaceholderText="type a text..." />
                        <Button x:ConnectionId='8' x:Name="sendBtn"                       Grid.Column="1" HorizontalAlignment="Stretch" Height="40" Margin="0,5">
                            <Button.Background>
                                <ImageBrush ImageSource = "/Assets/Menu/Sent-50.png" Stretch="Uniform">
                                </ImageBrush>
                            </Button.Background>
                        </Button>
                    </Grid>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
