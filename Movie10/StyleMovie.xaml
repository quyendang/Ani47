                                                        <TickBar x:Name="RightTickBar" Visibility="Collapsed" Fill="{ThemeResource SystemControlHighlightAltBaseMediumLowBrush}" Width="{ThemeResource SliderOutsideTickBarThemeHeight}" HorizontalAlignment="Left" Margin="4,0,0,0" Grid.Column="2" Grid.RowSpan="3" />
